<%= render 'shared/errors', obj: @goal %>

<div class='row'>
	<div class='col-xs-12'>
	<!--Display the form-->
	<%= form_for(@goal, :html => {class:"form-horizontal", role:"form"}) do |x| %>

	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= x.label :title %>
		</div>
		
		<div class="col-sm-8">
			<%= x.text_field :title, class: "form-control", placeholder: "Title of Goal", autofocus: true %>
		</div>
	</div>

	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= x.label :description %>
		</div>
		<div class="col-sm-8">
			<%= x.text_area :description, rows: 10, class: "form-control", placeholder: "Describe your goal" %>
		</div>
	</div>
<!--Display each category title-->
	<div class="form-group">
		<div class="row">
			<div class="col-sm-offset-2 col-sm-8">
				<%= x.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
				<% cb.label(class:"checkbox-inline input_checkbox"){cb.check_box(class:"checkbox") + cb.text} %>
				<% end %>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= x.submit class: 'btn btn-primary btn-lg' %>
		</div>
	</div>
			<% end %>

		 <div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to listing goals", goals_path %> ]
		</div>
	</div>
</div>