<%= render 'shared/errors', obj:@goal %>

<!--Display form-->
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@goal, :html => {class: "form-horizontal",role: "form"}) do |x| %>
		
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= x.label :title %>
			</div>
				<div class="col-sm-8">
					<%= x.text_field :title, class: "form-control", placeholder: "Title", autofocus:true %>
				</div>
		</div>
		
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= x.label :description %>
			</div>
				<div class="col-sm-8">
					<%= x.text_area :description, rows: 10, class: "form-control", placeholder: "Write your goal here", autofocus: true %>
				</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= x.submit class: "btn btn-primary btn-lg" %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to 'Cancel request and return to view goals', goals_path %> ]
		</div>
	</div>
</div>