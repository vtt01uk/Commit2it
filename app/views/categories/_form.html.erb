<%= render 'shared/errors', obj:@category %>

<!--Display form-->
<%= form_for(@category, :html => {class: "form-horizontal",role: "form"}) do |x| %>
		
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= x.label :name %>
			</div>
				<div class="col-sm-8">
					<%= x.text_field :name, class: "form-control", placeholder: "Category name", autofocus:true %>
				</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
<!--If a new user is signing up, show this "Sign up" message else..-->
				<%= x.submit class: "btn btn-primary btn-lg" %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to 'Cancel request and return to view goals', goals_path %> ]	
		</div>
