<h1 align="center">Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal",role: "form"}, url: login_path) do |x| %>		
	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= x.label :username %>
		</div>
		
			<div class="col-sm-8">
				<%= x.email_field :email, class: "form-control", placeholder: "Enter email", autofocus:true %>
			</div>
	</div>

	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= x.label :password %>
		</div>
			<div class="col-sm-8">
				<%= x.password_field :password, class: "form-control", autocomplete: "off" %>
			</div>
	</div>


	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
<!--If a new user is signing up, show this "Sign up" message else..-->
			<%= x.submit "Log in", class: "btn btn-primary btn-lg" %>
		</div>
	</div>
	<% end %>
	<div class="col-xs-4 col-xs-offset-4">
		[ <%= link_to 'Cancel request and return to view goals', goals_path %> ]	
	</div>