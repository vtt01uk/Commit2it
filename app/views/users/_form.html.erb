<%= render 'shared/errors', obj:@user %>

<!--Display form-->
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal",role: "form"}) do |x| %>
		
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= x.label :username %>
			</div>
				<div class="col-sm-8">
					<%= x.text_field :username, class: "form-control", placeholder: "Enter username", autofocus:true %>
				</div>
		</div>
		
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= x.label :email %>
			</div>
				<div class="col-sm-8">
					<%= x.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
				</div>
		</div>
		
				<div class="form-group">
			<div class="control-label col-sm-2">
				<%= x.label :password %>
			</div>
				<div class="col-sm-8">
					<%= x.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
				</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
<!--If a new user is signing up, show this "Sign up" message else..-->
				<%= x.submit(@user.new_record? ? "I'm ready" : "Update your goal", class: "btn btn-primary btn-lg") %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to 'Cancel request and return to view goals', goals_path %> ]	
		</div>
	</div>
</div>